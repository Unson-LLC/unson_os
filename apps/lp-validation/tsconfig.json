{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/tests/*": ["./tests/*"],
      "@/convex/*": ["../../convex/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "tests/**/*",
    ".next/types/**/*.ts",
    "../../convex/_generated/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}