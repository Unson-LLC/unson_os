# Convex環境変数設定例
# 実際の値はConvexダッシュボードから取得してください

# Convex URL（開発環境）
CONVEX_URL=https://your-project.convex.cloud

# Next.js用の公開変数
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Convex管理者用（オプション）
CONVEX_DEPLOY_KEY=your-deploy-key

# Resend（メール送信用）
RESEND_API_KEY=re_YOUR_API_KEY
RESEND_FROM_EMAIL=noreply@unson.jp

# 管理者メールアドレス
ADMIN_EMAIL=admin@unson.jp

# Discord招待リンク（無期限のもの）
DISCORD_INVITE_LINK=https://discord.gg/unsonos

# Discord Server ID（ウィジェット表示用）
# DiscordサーバーID：サーバー設定 > ウィジェット > サーバーIDをコピー
DISCORD_SERVER_ID=1234567890123456789

# Discord Bot設定（自動招待機能用）
# Bot Token: Discord Developer Portal > Bot > Reset Token
# Channel ID: 招待を作成したいチャンネルのID
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
FROM_EMAIL="Unson OS <noreply@unson.jp>"

# アナリティクス（オプション）
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe（将来実装）
# STRIPE_SECRET_KEY=sk_test_...
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...